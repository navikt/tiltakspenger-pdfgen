{{> tpts/partials/soknadBase }}
    <div class="mainContent">
         <div class="felles header">
            <img src="{{image "Navlogo.png"}}" class="navlogo" />
            <span class="tittel">Søknad om tiltakspenger</span>
         </div>
         <div class="personalia-header">
             <div class="personalia">
                <div class="person-ikon">
                    <svg width="18px" height="18px" viewBox="0 0 24 24" fill="none"
                    xmlns="http://www.w3.org/2000/svg" focusable="false" role="img">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M12 3.75a8.25 8.25 0 0 0-5.144 14.7 5.25 5.25 0 0 1 10.288 0A8.25 8.25 0 0 0 12 3.75Zm3.747 15.602a3.75 3.75 0 0 0-7.494 0A8.215 8.215 0 0 0 12 20.25c1.35 0 2.623-.324 3.747-.898ZM2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12ZM12 7.25a2.25 2.25 0 1 0 0 4.5 2.25 2.25 0 0 0 0-4.5ZM8.25 9.5a3.75 3.75 0 1 1 7.5 0 3.75 3.75 0 0 1-7.5 0Z" fill="currentColor">
                    </path></svg>
                </div>
                <div class="person-opplysninger">
                    <p class="opplysning"><b>{{personopplysninger.fornavn}} {{personopplysninger.etternavn}}</b></p>
                    <p class="opplysning"><b>{{personopplysninger.ident}}</b></p>
                </div>
             </div>
             <div class="sendt-til-nav">
                <p class="opplysning"><b>Sendt til NAV</b></p>
                <p class="opplysning">{{iso_to_nor_datetime innsendingTidspunkt}}</p>
             </div>
         </div>
         <hr class="separator" />
         <div class="spørsmålsbesvarelser">
        <div class="tiltaksperiode">
            <h3>Perioden du søker tiltakspenger for</h3>
            <p class="svar">{{iso_to_long_date tiltak.periode.fra}} - {{iso_to_long_date tiltak.periode.til}}</p>
        </div>
        <div class="common-section">
            <h3>Kvalifiseringsprogrammet</h3>
            <div class="svar">
                {{#if kvalifiseringsprogram.deltar}}
                    <p>Ja, jeg deltar i kvalifiseringsprogrammet i perioden {{iso_to_long_date kvalifiseringsprogram.periode.fra}} - {{iso_to_long_date kvalifiseringsprogram.periode.til}}</p>
                {{else}}
                    <p>Nei, jeg deltar ikke i kvalifiseringsprogrammet i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Introduksjonsprogrammet</h3>
            <div class="svar">
                {{#if introduksjonsprogram.deltar}}
                    <p>Ja, jeg deltar i introduksjonsprogrammet i perioden {{iso_to_long_date introduksjonsprogram.periode.fra}} - {{iso_to_long_date introduksjonsprogram.periode.til}}</p>
                {{else}}
                    <p>Nei, jeg deltar ikke i introduksjonsprogrammet i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Institusjonsopphold</h3>
            <div class="svar">
                {{#if institusjonsopphold.borPåInstitusjon}}
                <p>Ja, jeg bor på institusjon med fri kost og losji i perioden {{iso_to_long_date institusjonsopphold.periode.fra}} - {{iso_to_long_date institusjonsopphold.periode.til}}</p>
                {{else}}
                <p>Nei, jeg bor ikke på institusjon med fri kost og losji i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Tiltak</h3>
            <div class="svar">
                <p>{{tiltak.typeNavn}} - {{tiltak.arrangør}}</p>
                <ul>
                    {{#if tiltak.arenaRegistrertPeriode}}
                    <li>
                        <p>Startdato <b>{{iso_to_long_date tiltak.arenaRegistrertPeriode.fra}}</b> - Sluttdato <b>{{iso_to_long_date tiltak.arenaRegistrertPeriode.til}}</b></p>
                    </li>
                    {{else}}
                    <li>
                        <p>Startdato <b>{{iso_to_long_date tiltak.periode.fra}}</b> - Sluttdato <b>{{iso_to_long_date tiltak.periode.til}}</b></p>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
        <div class="common-section">
            <h3>Lønnet arbeid</h3>
            <div class="svar">
                {{#if lønnetArbeid.erILønnetArbeid}}
                    <p>Ja, jeg er i lønnet arbeid i perioden jeg deltar på tiltaket</p>
                {{else}}
                    <p>Nei, jeg er ikke i lønnet arbeid i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Sykepenger</h3>
            <div class="svar">
                {{#if sykepenger.mottar}}
                    <p>Ja, jeg mottar sykepenger i perioden {{iso_to_long_date sykepenger.periode.fra}} - {{iso_to_long_date sykepenger.periode.til}}</p>
                {{else}}
                    <p>Nei, jeg mottar ikke sykepenger i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Gjenlevendepensjon</h3>
            <div class="svar">
                {{#if gjenlevendepensjon.mottar}}
                    <p>Ja, jeg mottar gjenlevendepensjon i perioden {{iso_to_long_date gjenlevendepensjon.periode.fra}} - {{iso_to_long_date gjenlevendepensjon.periode.til}}</p>
                {{else}}
                    <p>Nei, jeg mottar ikke gjenlevendepensjon i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Alderspensjon</h3>
            <div class="svar">
                {{#if alderspensjon.mottar}}
                    <p>Ja, jeg mottar alderspensjon fra {{iso_to_long_date alderspensjon.fraDato}}</p>
                {{else}}
                    <p>Nei, jeg mottar ikke alderspensjon i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Supplerende stønad for personer over 67 år</h3>
            <div class="svar">
                {{#if supplerendestønadover67.mottar}}
                    <p>Ja, jeg mottar supplerende stønad for personer over 67 år i perioden {{iso_to_long_date supplerendestønadover67.periode.fra}} - {{iso_to_long_date supplerendestønadover67.periode.til}}</p>
                {{else}}
                    <p>Nei, jeg mottar ikke supplerende stønad for personer over 67 år i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Supplerende stønad for uføre flyktninger</h3>
            <div class="svar">
                {{#if supplerendestønadflyktninger.mottar}}
                    <p>Ja, jeg mottar supplerende stønad for uføre flyktninger i perioden {{iso_to_long_date supplerendestønadflyktninger.periode.fra}} - {{iso_to_long_date supplerendestønadflyktninger.periode.til}}</p>
                {{else}}
                    <p>Nei, jeg mottar ikke supplerende stønad for uføre flyktninger i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Pensjonsordninger</h3>
            <div class="svar">
                {{#if pensjonsordning.mottar}}
                    <p>Ja, jeg mottar pensjonsordning i perioden {{iso_to_long_date pensjonsordning.periode.fra}} - {{iso_to_long_date pensjonsordning.periode.til}}</p>
                {{else}}
                    <p>Nei, jeg mottar ikke pensjonsordning i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Etterlønn</h3>
            <div class="svar">
                {{#if etterlønn.mottar}}
                    <p>Ja, jeg mottar etterlønn i perioden jeg deltar på tiltaket</p>
                {{else}}
                    <p>Nei, jeg mottar ikke etterlønn i perioden jeg deltar på tiltaket</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Jobbsjansen</h3>
            <div class="svar">
                {{#if jobbsjansen.mottar}}
                    <p>Ja, jeg mottar utbetalinger fra jobbsjansen i perioden {{iso_to_long_date jobbsjansen.periode.fra}} - {{iso_to_long_date jobbsjansen.periode.til}}</p>
                {{else}}
                    <p>Nei, jeg mottar ingen utbetalinger fra en jobbsjansen</p>
                {{/if}}
            </div>
        </div>
        <div class="common-section">
            <h3>Barnetillegg</h3>
            <div class="svar">
                {{#each barnetillegg.manueltRegistrerteBarnSøktBarnetilleggFor}}
                    <p>
                        <b>{{this.fornavn}} {{this.mellomnavn}} {{this.etternavn}}</b> født {{iso_to_long_date this.fødselsdato}}
                        <ul>
                            <li>
                                {{#if this.oppholdInnenforEøs}}
                                    <p>Ja, barnet oppholder seg innenfor EØS i tiltaksperioden</p>
                                {{else}}
                                    <p>Nei, barnet oppholder seg ikke innenfor EØS i tiltaksperioden</p>
                                {{/if}}
                            </li>
                        </ul>
                    </p>
                {{/each}}
                {{#each barnetillegg.registrerteBarnSøktBarnetilleggFor}}
                    {{#if this.fornavn}}
                        <p>
                            <b>{{this.fornavn}} {{this.mellomnavn}} {{this.etternavn}}</b> født {{iso_to_long_date this.fødselsdato}}
                            <ul>
                                <li>
                                    {{#if this.oppholdInnenforEøs}}
                                        <p>Ja, barnet oppholder seg innenfor EØS i tiltaksperioden</p>
                                    {{else}}
                                        <p>Nei, barnet oppholder seg ikke innenfor EØS i tiltaksperioden</p>
                                    {{/if}}
                                </li>
                            </ul>
                        </p>
                    {{else}}
                         <p>
                            <b>Barn født {{iso_to_long_date this.fødselsdato}}
                            <ul>
                                <li>
                                    {{#if this.oppholdInnenforEøs}}
                                        <p>Ja, barnet oppholder seg innenfor EØS i tiltaksperioden</p>
                                    {{else}}
                                        <p>Nei, barnet oppholder seg ikke innenfor EØS i tiltaksperioden</p>
                                    {{/if}}
                                </li>
                            </ul>
                        </p>
                    {{/if}}
                {{/each}}
            </div>
        </div>
        <div class="common-section">
            <h3>Bekreftelse</h3>
            <div class="svar">
                {{#if harBekreftetÅSvareSåGodtManKan}}
                    <p>Jeg vil svare så godt jeg kan på spørsmålene i søknaden.</p>
                {{/if}}
                {{#if harBekreftetAlleOpplysninger}}
                    <p>Jeg har lest all informasjonen jeg har fått i søknaden og bekrefter at opplysningene jeg har gitt er korrekte.</p>
                {{/if}}
            </div>
        </div>
        {{#if vedleggsnavn.length}}
            <div class="common-section">
                <h3>Dine opplastede vedlegg</h3>
                {{#each vedleggsnavn}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <div class="common-section">
            <h3>Bekreftelse</h3>
            <div class="svar">
                {{#if harBekreftetAlleOpplysninger}}
                    <p>Jeg har lest all informasjonen jeg har fått i søknaden og bekrefter at opplysningene jeg har gitt er korrekte.</p>
                {{/if}}
            </div>
        </div>
        </div>
    </div>
</body>
</html>
