    <section>
        <h3>Meldekortdager</h3>
        <table>
            <tbody>
            {{#each dager}}
                <tr>
                    {{#eq status "DELTATT"}}
                        <td class="statiskDag deltatt">{{iso_to_long_date dato}}:</td>
                        <td class="statiskDag deltatt"><b>Deltatt</b></td>
                    {{/eq}}
                    {{#eq status "FRAVÆR_SYK"}}
                        <td class="statiskDag syk">{{iso_to_long_date dato}}:</td>
                        <td class="statiskDag syk"><b>Syk</b></td>
                    {{/eq}}
                    {{#eq status "FRAVÆR_SYKT_BARN"}}
                        <td class="statiskDag syktBarn">{{iso_to_long_date dato}}:</td>
                        <td class="statiskDag syktBarn"><b>Sykt barn eller syk barnepasser</b></td>
                    {{/eq}}
                    {{#eq status "FRAVÆR_ANNET"}}
                        <td class="statiskDag annet">{{iso_to_long_date dato}}:</td>
                        <td class="statiskDag annet"><b>Fravær godkjent av Nav</b></td>
                    {{/eq}}
                    {{#eq status "IKKE_DELTATT"}}
                        <td class="statiskDag ikkeDeltatt">{{iso_to_long_date dato}}:</td>
                        <td class="statiskDag ikkeDeltatt"><b>Annet fravær</b></td>
                    {{/eq}}
                    {{#eq status "IKKE_REGISTRERT"}}
                        <td class="statiskDag ikkeRegistrert">{{iso_to_long_date dato}}:</td>
                        <td class="statiskDag ikkeRegistrert"><b>Ikke registrert</b></td>
